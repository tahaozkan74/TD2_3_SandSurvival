<Window x:Class="SandSurvival.Jeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SandSurvival"
        mc:Ignorable="d"
        Title="Sand Survival - Desert" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <Canvas x:Name="EcranPrincipal" ClipToBounds="True" Background="#DDB678">

        <Canvas x:Name="MondeDeJeu">
            <Canvas.RenderTransform>
                <TranslateTransform x:Name="Camera" X="0" Y="0"/>
            </Canvas.RenderTransform>

            <Image x:Name="Player" 
                   Source="/Images/Player/walk0.png" 
                   Width="130" Height="130" 
                   Canvas.Left="0" Canvas.Top="0"
                   Panel.ZIndex="9999"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="PlayerScale" ScaleX="1"/>
                </Image.RenderTransform>
            </Image>

            <Image x:Name="Mummy" 
                   Source="/Images/mommy/marche1.png" 
                   Width="130" Height="130" 
                   Canvas.Left="500" Canvas.Top="500"
                   Panel.ZIndex="9998"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="MummyScale" ScaleX="1"/>
                </Image.RenderTransform>
            </Image>

        </Canvas>

        <Border Background="#CC333333" CornerRadius="8" Canvas.Left="20" Canvas.Top="20" Padding="15,8">
            <TextBlock Text="ATTENTION : MOMIE EN APPROCHE" Foreground="#FF0000" FontFamily="Segoe UI Black" FontSize="18"/>
        </Border>

        <Button Click="Button_Menu_Click" Canvas.Right="20" Canvas.Top="20" Width="140" Height="50" Background="#F4E4BC" BorderBrush="#8B4513" BorderThickness="4" Panel.ZIndex="10000">
            <TextBlock Text="MENU" FontFamily="Segoe UI Black" FontSize="20" Foreground="#8B4513"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

    </Canvas>
</Window>