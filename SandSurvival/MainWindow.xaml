<Window x:Class="SandSurvival.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SandSurvival"
        mc:Ignorable="d"
        Title="Sand Survival" Height="450" Width="800">

    <Grid>
        <Image Source="/Images/image de fond/ecranaccueil.png" Stretch="Fill"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="193" Margin="0,207,0,0">

            <Button Click="Button_Jouer_Click" Background="Transparent" BorderThickness="0" Margin="0,10" Width="104">
                <Image Source="/Images/BOUTON/buttonJouer.png" Width="102" Height="45" Stretch="Uniform"/>
            </Button>

            <Button Click="Button_Parametre_Click" Background="Transparent" BorderThickness="0" Margin="0,10" Width="104">
                <Image Source="/Images/BOUTON/buttonParametre.png" Width="102" Height="45" Stretch="Uniform"/>
            </Button>

            <Button Click="Button_Credit_Click" Background="Transparent" BorderThickness="0" Margin="0,10" Width="104">
                <Image Source="/Images/BOUTON/buttonCredit.png" Width="102" Height="45" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.364"/>
                            <RotateTransform Angle="-0.33"/>
                            <TranslateTransform Y="-0.327"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Button>

        </StackPanel>
    </Grid>
</Window>
