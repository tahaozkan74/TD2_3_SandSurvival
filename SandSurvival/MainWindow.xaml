<Window x:Class="SandSurvival.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SandSurvival"
        mc:Ignorable="d"
        Title="Sand Survival" Height="450" Width="800">
        

    <Grid>
        <Image Source="/Images/image de fond/ecranaccueil.png" Stretch="Fill"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="1" Stretch="Uniform" VerticalAlignment="Bottom" Margin="0,0,0,20">

                <Grid Width="1000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Click="Button_Credit_Click" 
                            Background="Transparent" BorderThickness="0" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                            Margin="20,0,0,0">
                        <Image Source="/Images/BOUTON/buttonCredit.png" Width="200" Stretch="Uniform"/>
                    </Button>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Click="Button_Jouer_Click" Background="Transparent" BorderThickness="0" Margin="0,5">
                            <Image Source="/Images/BOUTON/buttonJouer.png" Width="200" Stretch="Uniform"/>
                        </Button>
                        <Button Click="Button_Parametre_Click" Background="Transparent" BorderThickness="0" Margin="0,5">
                            <Image Source="/Images/BOUTON/buttonParametre.png" Width="200" Stretch="Uniform"/>
                        </Button>
                        <Button Click="Button_Quitter_Click" Background="Transparent" BorderThickness="0" Margin="0,5">
                            <Image Source="/Images/BOUTON/buttonQuitter.png" Width="200" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>

                    <Button Grid.Column="2" Click="Button_Regles_Click" 
                            Background="Transparent" BorderThickness="0" 
                            HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                            Margin="0,0,20,0">
                        <Image Source="/Images/BOUTON/buttonRegles.png" Width="200" Stretch="Uniform"/>
                    </Button>

                </Grid>
            </Viewbox>
        </Grid>

        <Grid x:Name="GridRegles" Visibility="Collapsed" Background="#AA000000">
            <Viewbox Stretch="Uniform" Width="600">
                <Border Background="#F4E4BC" BorderBrush="#8B4513" BorderThickness="4" CornerRadius="10" Padding="20" Width="500">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="RÈGLES DU JEU" FontFamily="Segoe UI Black" FontSize="30" Foreground="#8B4513" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="1. Survivez aux vagues de zombies dans le désert." FontSize="18" Foreground="#5C3317" TextWrapping="Wrap" Margin="0,5"/>
                            <TextBlock Text="2. Utilisez vos armes pour les éliminer." FontSize="18" Foreground="#5C3317" TextWrapping="Wrap" Margin="0,5"/>
                            <TextBlock Text="3. Attention aux obstacles et aux pièges !" FontSize="18" Foreground="#5C3317" TextWrapping="Wrap" Margin="0,5"/>
                            <TextBlock Text="4. Bonne chance, survivant..." FontSize="18" Foreground="#5C3317" TextWrapping="Wrap" Margin="0,20"/>
                        </StackPanel>
                        <Button Click="Button_FermerRegles_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-10,-10,-10,0" Width="40" Height="40" Background="Red" BorderBrush="#8B4513" BorderThickness="2">
                            <TextBlock Text="X" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>
            </Viewbox>
        </Grid>

        <Grid x:Name="GridCredit" Visibility="Collapsed" Background="Black">
            <Button Click="Button_FermerCredit_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Width="40" Height="40" Background="White" BorderBrush="Gray" BorderThickness="1" Panel.ZIndex="10">
                <TextBlock Text="X" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Canvas x:Name="CanvasCredit" ClipToBounds="True">
                <StackPanel x:Name="StackPanelCredit" Width="{Binding ActualWidth, ElementName=CanvasCredit}" Canvas.Top="1000">
                    <TextBlock Text="CRÉDITS" Foreground="Yellow" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,30"/>

                    <TextBlock Text="Ce jeux-vidéo nommé Sand Survival Desert a été créé dans le but de la SAE 1.01 et 1.02" 
                               Foreground="White" FontSize="22" TextAlignment="Center" TextWrapping="Wrap" Margin="50,10"/>

                    <TextBlock Text="par Fatih YILDIRIM et Taha OZKAN" 
                               Foreground="White" FontSize="26" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" Margin="50,10"/>

                    <TextBlock Text="du TP22" 
                               Foreground="LightGray" FontSize="20" TextAlignment="Center" Margin="0,10"/>

                    <TextBlock Text="pour M.DIARD et MME.GRUSON." 
                               Foreground="White" FontSize="22" TextAlignment="Center" TextWrapping="Wrap" Margin="50,30"/>

                    <TextBlock Text="Dans l'espoir que notre jeu vous plaira." 
                               Foreground="Yellow" FontSize="24" FontStyle="Italic" TextAlignment="Center" Margin="0,50"/>

                    <TextBlock Text="" Height="100"/>
                </StackPanel>
            </Canvas>
        </Grid>

        <Grid x:Name="GridParametres" Visibility="Collapsed" Background="#AA000000">
            <Viewbox Stretch="Uniform" Width="400">
                <Border Background="#F4E4BC" BorderBrush="#8B4513" BorderThickness="4" CornerRadius="10" Padding="30" Width="400">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="PARAMÈTRES" FontFamily="Segoe UI Black" FontSize="30" Foreground="#8B4513" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                            <TextBlock Text="Volume de la Musique" FontSize="20" FontWeight="Bold" Foreground="#5C3317" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <Slider x:Name="SliderVolume" Minimum="0" Maximum="1" Value="0.5" Width="300" 
                                    ValueChanged="SliderVolume_ValueChanged" 
                                    IsMoveToPointEnabled="True" Margin="0,0,0,20"/>
                            <TextBlock Text="(Ajustez le curseur pour changer le volume)" FontSize="12" Foreground="#8B4513" FontStyle="Italic" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Button Click="Button_FermerParametre_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-20,-20,-20,0" Width="40" Height="40" Background="Red" BorderBrush="#8B4513" BorderThickness="2">
                            <TextBlock Text="X" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>
            </Viewbox>
        </Grid>

    </Grid>
</Window>