<Window x:Class="SandSurvival.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SandSurvival"
        mc:Ignorable="d"
        Title="Sand Survival" Height="450" Width="800">

    <Grid>
        <Image Source="/Images/image de fond/ecranaccueil.png" Stretch="Fill"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="1" Stretch="Uniform" VerticalAlignment="Top" Margin="0,10,0,20">
                <StackPanel>
                    <Button Click="Button_Jouer_Click" Background="Transparent" BorderThickness="0" Margin="0,5">
                        <Image Source="/Images/BOUTON/buttonJouer.png" Width="170" Height="45" Stretch="Uniform"/>
                    </Button>

                    <Button Click="Button_Parametre_Click" Background="Transparent" BorderThickness="0" Margin="0,5">
                        <Image Source="/Images/BOUTON/buttonParametre.png" Width="170" Height="45" Stretch="Uniform"/>
                    </Button>

                    <Button Click="Button_Quitter_Click" Background="Transparent" BorderThickness="0" Margin="0,5">
                        <Image Source="/Images/BOUTON/buttonQuitter.png" Width="170" Height="45" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>